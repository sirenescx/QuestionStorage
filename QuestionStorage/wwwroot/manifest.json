{
  "name": "Custom context menu in browser action",
  "version": "1",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Some tooltip",
    "default_popup": "popup.html"
  },
  "permissions": [
    "contextMenus"
  ],
  "icons": {
    "16": "icon16.png"
  }
}